<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jdbi</groupId>
        <artifactId>jdbi3-parent</artifactId>
        <version>3.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>jdbi3-docs</artifactId>
    <name>jdbi documentation</name>
    <packaging>pom</packaging>
    <description>
        Build and deploy jdbi docs, written in AsciiDoc.
    </description>

    <build>
        <plugins>
            <plugin>
                <groupId>org.asciidoctor</groupId>
                <artifactId>asciidoctor-maven-plugin</artifactId>
                <version>1.5.2</version>
                <executions>
                    <execution>
                        <id>output-html</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>process-asciidoc</goal>
                        </goals>
                    </execution>
                </executions>

                <configuration>
                    <sourceDirectory>.</sourceDirectory>
                    <backend>html</backend>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>publish-docs</id>
            <activation>
                <property>
                    <name>publish-docs</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-scm-publish-plugin</artifactId>
                        <version>1.1</version>
                        <executions>
                            <execution>
                                <id>publish-docs</id>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>publish-scm</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <pubScmUrl>scm:git:git@github.com:jdbi/jdbi.git</pubScmUrl>
                            <scmBranch>gh-pages</scmBranch>
                            <scmPubCheckoutDirectory>/tmp/gh-pages-publish</scmPubCheckoutDirectory>
                            <content>${project.build.directory}/generated-docs</content>
                            <localCheckout>true</localCheckout>
                            <excludes>.git</excludes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
